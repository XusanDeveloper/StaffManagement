@model HomeViewModel

@{
    ViewBag.title = "Staff List"; 
}

<div class="card-deck">
    @foreach (var staff in Model.Staffs)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@staff.FullName</h3>
            </div>
            <img class="card-img-top" src="~/images/user.png" asp-append-version = "true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-Id = "@staff.Id" class="btn btn-primary" m-1 >View</a>
                <a href="#" class="btn btn-primary" m-1 >Edit</a>
                <a href="#" class="btn btn-danger" m-1 >Delete</a>
            </div>

        </div>
    }
</div>
